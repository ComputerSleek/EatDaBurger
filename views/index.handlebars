<h1>Burgers!</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	{{name}}
<li>
	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		 EAT TIME!
	</button>
	<button class="delete-button" data-id="{{id}}">DELETE THIS BURGER!!! </button>
</li>

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
		<button class="delete-button" data-id="{{id}}">DELETE THIS BURGER!!! </button>
</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>